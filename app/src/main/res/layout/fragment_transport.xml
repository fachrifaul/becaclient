<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FAFAFA"
                android:padding="16dp"
    >

    <LinearLayout
        android:id="@+id/lndari"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:padding="15dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="TEMPAT PENJEMPUTAN"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:paddingTop="5dip"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/imageplace"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/places"
                />

            <TextView
                android:id="@+id/TeLokasi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_toRightOf="@id/imageplace"
                android:gravity="center_vertical"
                android:hint="Lokasi"
                android:textColorHint="@android:color/darker_gray"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            >

            <ImageView
                android:id="@+id/imageaddres"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/address"
                />

            <FrameLayout
                android:id="@+id/FrLokasiDetail"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="60dp">

                <EditText
                    android:id="@+id/TeLokasiDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="top"
                    android:hint="Alamat Lengkap *"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:isScrollContainer="false"
                    android:maxLength="240"
                    android:textColor="#000000"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="14sp"/>

            </FrameLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="* Jalan/Gang/Ciri lainnya"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/gray"
            android:textStyle="italic"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lntujuan"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_below="@+id/lndari"
        android:orientation="vertical"
        android:padding="15dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="TUJUAN"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:paddingTop="5dip"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/imageplaceTuj"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/places"
                />

            <TextView
                android:id="@+id/TeTujuan"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="19dp"
                android:layout_toRightOf="@id/imageplaceTuj"
                android:gravity="center_vertical"
                android:hint="Lokasi"
                android:textColorHint="@android:color/darker_gray"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonxml"
            android:drawablePadding="10dip"
            android:drawableRight="@drawable/arrowright"
            android:padding="4dp"
            android:text="Selanjutnya"
            android:textColor="#000000"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>