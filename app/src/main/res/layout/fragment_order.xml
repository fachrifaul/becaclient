<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FAFAFA"
                android:padding="7dp"
    >

    <LinearLayout
        android:id="@+id/lnkonfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linshadow"
        android:orientation="vertical"
        android:padding="15dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="KONFIRMASI ULANG"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:paddingTop="5dip"/>

        <TextView
            android:id="@+id/TeLokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/akudisini30"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="Jl. Harmonika Baru Jamin Ginting Medan"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Menuju"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/TeTujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/places30"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:text="Jl. Harmonika Baru Jamin Ginting Medan"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnkonfirmasi"
        android:background="@drawable/linshadow"
        android:orientation="vertical"
        android:padding="15dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Info Detail"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:paddingTop="5dip"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/address30"
            android:drawablePadding="15dp"
            android:gravity="left|center_vertical"
            android:text="Jl. Harmonika Baru no 45 Jamin Ginting Medan dekat Rumah sakit Methodis"/>

        <TextView
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/distance30"
            android:drawablePadding="15dp"
            android:gravity="left|center_vertical"
            android:text="23.5 KM"/>

        <TextView
            android:id="@+id/payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/payment30"
            android:drawablePadding="15dp"
            android:gravity="left|center_vertical"
            android:text="Rp. 15.000"/>

        <Button
            android:id="@+id/btnOrder"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonxml"
            android:drawablePadding="10dip"
            android:drawableRight="@drawable/order50"
            android:padding="10dp"
            android:text="Order Sekarang"
            android:textColor="#000000"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>