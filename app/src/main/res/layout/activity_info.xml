<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp"
    >

    <LinearLayout
        android:id="@+id/lnkonfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        android:background="@drawable/linshadow"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="KONFIRMASI ULANG"
            />

        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:paddingTop="5dip"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Jl. Harmonika Baru Jamin Ginting Medan"
            android:drawableLeft="@drawable/akudisini30"
            android:drawablePadding="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/TeLokasi" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menuju"
            android:gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Jl. Harmonika Baru Jamin Ginting Medan"
            android:drawableLeft="@drawable/places30"
            android:drawablePadding="0dp"
            android:id="@+id/TeTujuan" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnInfo"
        android:layout_below="@id/lnkonfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        android:background="@drawable/linshadow"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Info Detail"
        />

    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:paddingTop="5dip"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="Jl. Harmonika Baru no 45 Jamin Ginting Medan dekat Rumah sakit Methodis"
            android:drawableLeft="@drawable/address30"
            android:drawablePadding="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/address" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="23.5 KM"
            android:drawableLeft="@drawable/distance30"
            android:drawablePadding="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/distance" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="Rp. 15.000"
            android:drawableLeft="@drawable/payment30"
            android:drawablePadding="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/payment" />

        <Button
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Order Sekarang"
            android:background="@drawable/buttonxml"
            android:id="@+id/btnOrder"
            android:drawableRight="@drawable/order50"
            android:layout_gravity="right"
            android:drawablePadding="10dip"
            android:textStyle="bold"
            android:textColor="#000000" />

    </LinearLayout>

</RelativeLayout>